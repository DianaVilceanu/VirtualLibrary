<form asp-controller="Categories" asp-action="CategoryDetails" method="get">
    <p>
        Category: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>


<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">



    <div class="row">
        @foreach (Category item in Model.Categories)
        {
            <td>
                <ul class="links">
                    <center>
                        <ul>
                            <a href="@Url.Action("BookDetails", "Categories", new { id = item.CategoryID})" title="@item.CategoryName" class="links">
                                <img class="img-responsive" src="@Url.Content("~/images/" + @item.CategoryImage)" height="350" width="350" alt="">
                            </a>
                        </ul>
                        <div class="category-name">@Html.DisplayFor(modelItem => item.CategoryName)</div><br />
                        @* <a asp-action="Go" asp-controller="Categories">Go</a> *@
                    </center>
                </ul>
            </td>
        }
    </div>

