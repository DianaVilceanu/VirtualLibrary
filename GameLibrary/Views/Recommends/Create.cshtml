@model GameLibrary.Models.Recommend

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-family:Montserrat;">What books do you prefer?</h1>

<h4 style="font-family:Montserrat;">Help us recommending users the best books by letting us know what you like.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItiPlace" class="control-label"></label>
                <input asp-for="ItiPlace" class="form-control" />
                <span asp-validation-for="ItiPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dislike" class="control-label"></label>
                <input asp-for="Dislike" class="form-control" />
                <span asp-validation-for="Dislike" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

